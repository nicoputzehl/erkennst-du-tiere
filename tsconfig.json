{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/quiz": [
        "./src/quiz/*"
      ],
      "@/animals": [
        "./src/animals/*"
      ],
      "@/src": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
